=link_to solution, class: 'solution' do
  =image display_avatar_url(solution.user, user_track), "Avatar of #{display_handle(solution.user, user_track)}"

  .exercise= solution.exercise.title
  .track #{solution.exercise.track.title} track

  .details-bar
    .handle
      = graphical_icon "user", style: :light, fixed_width: true
      =display_handle(solution.user, user_track)
    .detail
      = graphical_icon "comment", style: :light, fixed_width: true
      =solution.num_comments
    .detail
      = graphical_icon "star", style: :light, fixed_width: true
      =solution.num_stars
