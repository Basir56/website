- return if test_run.blank?

- if test_run.errored?
  .test_run-message
    Message:
    %span= test_run.message
- elsif test_run.failed?
  - test_run.failed_tests.each do |test|
    .test-failure
      Failed test:
      %span.name= test.name
      .message= test.message
- elsif test_run.pass?
  %p Your code ran successfully.

  = button_to "Submit exercise",
    submit_research_experiment_solution_path(test_run.solution),
    class: "pure-button pure-button-primary submit-exercise-button"

